{
  "name": "mlops-devpod",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
 
  "runArgs": [
    "--gpus",
    "all",
    "--network=host"
  ],
  
  "remoteUser": "vscode",
  "onCreateCommand": "chmod +x scripts/setup && scripts/setup",
	"postCreateCommand": "chmod +x scripts/install_torch.sh && scripts/install_torch.sh"
}
